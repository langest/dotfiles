input "2:10:TPPS/2_Elan_TrackPoint" {
    accel_profile flat
    pointer_accel 0.2
}

input "1922:27:-_GameBall" {
    accel_profile flat
    pointer_accel -0.6
}

bindsym $mod+Tab workspace back_and_forth

# Gaps (requires sway-gaps)
smart_gaps on
gaps inner 4

### --- Scripts / shortcuts --- ###
bindsym $mod+Shift+w exec bash $script_home/wallpaper.sh
bindsym $mod+Shift+e exec bash $script_home/wallpaper_tiling.sh
bindsym $mod+Shift+f exec firefox
bindsym $mod+Shift+g exec chromium

# Toggle keyboard layout
bindsym Ctrl+space exec bash -c "LAYOUT=$(swaymsg -t get_inputs | grep -o 'us\\|se' | head -1); if [ \"$LAYOUT\" = us ]; then swaymsg input '*' xkb_layout se && notify-send 'Switched to SE layout'; else swaymsg input '*' xkb_layout us && notify-send 'Switched to US layout'; fi"

# Screenshot (use grim + slurp)
bindsym $mod+Shift+p exec grim -g "$(slurp)" ~/Pictures/screenshots/$(date +'%Y-%m-%d-%H%M%S').png

# Suspend
bindsym $mod+Shift+q exec systemctl suspend
exec_always {
    swayidle \
        timeout 600 'swaylock -f -c 000000' \
        before-sleep 'swaylock -f -c 000000'
}

# Brightness (Wayland)
bindsym XF86MonBrightnessUp exec brightnessctl set +10% && notify-send 'Brightness increased'
bindsym XF86MonBrightnessDown exec brightnessctl set 10%- && notify-send 'Brightness decreased'

### --- App assignments --- ###
assign [app_id="thunderbird"] $ws2
