#!/bin/sh
#
# ~/.xinitrc
#
# Executed by startx (run your window manager from here)

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

#Play a pretty sound on startup
cvlc --vout none Downloads/Microsoft\ Windows\ XP\ Startup\ Sound.mp3 --play-and-exit &

# launch agent
eval $(/usr/bin/killall ssh-agent; /usr/bin/ssh-agent)

#Set bg
feh --randomize --recursive --bg-fill /home/langest/currentWps/

#launch urxvt as daemon and load config
urxvtd --quiet --opendisplay --fork
xrdb - merge ~/.Xresources
setxkbmap se

#launch statusbar program
dwmstatus &

#launch conky
#conky -d -p 2 &

#disable beep
/usr/bin/xset b off

#turn on numlock
numlockx on

setxkbmap -option ctrl:nocaps       # Make Caps Lock a Control key

exec i3
