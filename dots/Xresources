!Color theme
#include "/home/langest/repos/dotfiles/xcolor/X_gruvbox-dark"

Xcursor.theme: DMZ-White

URxvt.font: xft:Inconsolata:size=12:antialias=true
URxvt*multichar_encoding: utf-8

! perl extensions
URxvt*perl-ext-common: default,clipboard,matcher

URxvt*saveLines: 12000

! url opener
URxvt*url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

! transparency
!URxvt*transparent: true
!URxvt*shading: 70
URxvt.depth: 32
URxvt.background: rgba:3f00/3f00/3f00/dddd

! internal border
URxvt.internalBorder: 8

! scrollbar
URxvt.scrollBar: false

! xterm-like ctrl+arrows work with vim
URxvt.keysym.Control-Up:    \033[1;5A
URxvt.keysym.Control-Down:  \033[1;5B
URxvt.keysym.Control-Left:  \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

URxvt*iso14755: false
URxvt*iso14755_52: false

! copy-paste
URxvt.keysym.C-S-c: perl:clipboard:copy
URxvt.keysym.C-S-v: perl:clipboard:paste
URxvt.perl-ext-common: default,clipboard

